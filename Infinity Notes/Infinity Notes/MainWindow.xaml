<Window x:Class="Infinity_Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:local="clr-namespace:Infinity_Notes"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Title="Infinity Notes"  Width="1280" Height="720">
    <Grid x:Name="mainGrid">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="sideBar" Grid.RowSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Frame x:Name="sideBarFrame" Background="#F0F0F0" Grid.ColumnSpan="2"/>

            <TextBox x:Name="createInput" Margin="10,10,10,0" Style="{StaticResource MaterialDesignTextBox}" materialDesign:HintAssist.Hint="Create" TextWrapping="NoWrap" VerticalAlignment="Top" Height="30" FontSize="16"/>

            <Button Content="Settings" Click="settingsButton_Click" Style="{StaticResource MaterialDesignFlatButton}" Margin="10,0,10,10" Grid.ColumnSpan="2" FontFamily="Segoe UI" Height="36" VerticalAlignment="Bottom" FontSize="16"/>

        </Grid>

        <TextBox x:Name="searchInput" Margin="10,10,0,0" Style="{StaticResource MaterialDesignTextBox}" materialDesign:HintAssist.Hint="Search" TextWrapping="NoWrap" VerticalAlignment="Top" Height="30" FontSize="16" Grid.Column="1" HorizontalAlignment="Left" Width="200"/>

        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden" Grid.Column="1" Grid.Row="1"/>
        <TextBox x:Name="mainInput" Grid.Column="1" Margin="10,10,0,0" Grid.Row="1" Style="{StaticResource MaterialDesignTextBox}" AcceptsReturn="True" FontSize="14" AcceptsTab="True" AutoWordSelection="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>


            <Menu Grid.Column="1" Margin="225,10,0,0" Background="#FFFFFF" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100">
            <MenuItem Header="File" Height="30" FontFamily="Segoe UI" FontSize="16" Width="100">
                <MenuItem Header="Export" FontFamily="Segoe UI" Click="exportButton_Click"></MenuItem>
                <MenuItem Header="Open" FontFamily="Segoe UI" Click="openButton_Click"></MenuItem>
            </MenuItem>
        </Menu>
        

    </Grid>
</Window>
